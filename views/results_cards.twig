<a href="product.php?id={{ event.identificador }}">
                  <div class="card card-product">
    <div class="card-image">
    <img class="img rounded" src="{{ event.images[1] }}">
    </div>
    <div class="card-body">
        <h6 class="category text-warning">Evento</h6>
